<%- include ("./partials/header") %>

<!-- User Details -->
<div class="user-data">
  <div class="user-msg">  Hi, <%= name %> </div>
  <div class="email" class="hidden" id="email"> <%= email%> </div>
  <div class="box" class="fund">
    <div id="fund-head">Funds: </div>
    <div id="funds"></div>
  </div>
</div>

<br>

<!-- Error in fetching user error -->
