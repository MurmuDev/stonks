<br>

<!-- Transaction head -->
<div class="head"> Transactions </div>
<br>

<!-- sort bar -->
<div class="bar" id="sort-bar"></div>

<br>
<!-- container for tranctions -->
<div class="container" id="transaction-container"></div>
<br>

<!-- Proceed to logout -->
